<%- include('partials/header') %>

<h3>Edit Task</h3>

<form action="/tasks/update/<%= task.id %>" method="POST" class="card p-4 shadow-sm">
  <div class="mb-3">
    <label class="form-label">Title</label>
    <input type="text" name="title" class="form-control" value="<%= task.title %>" required>
  </div>

  <div class="mb-3">
    <label class="form-label">Description</label>
    <textarea name="description" class="form-control"><%= task.description %></textarea>
  </div>

  <div class="mb-3">
    <label class="form-label">Deadline</label>
    <input type="date" name="deadline" class="form-control" value="<%= task.deadline %>" required>
  </div>

  <div class="mb-3">
    <label class="form-label">Status</label>
    <select name="status" class="form-select">
      <option value="belum selesai" <%= task.status === 'belum selesai' ? 'selected' : '' %>>Belum Selesai</option>
      <option value="sudah selesai" <%= task.status === 'sudah selesai' ? 'selected' : '' %>>Sudah Selesai</option>
    </select>
  </div>

  <button class="btn btn-success">Save</button>
  <a href="/tasks" class="btn btn-secondary">Cancel</a>
</form>

<%- include('partials/footer') %>
